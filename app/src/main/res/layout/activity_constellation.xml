<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="io.swingdev.constellation.viewmodels.ConstellationViewModel" />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/linear_layout_padding_offset"
            android:paddingLeft="@dimen/linear_layout_padding_offset"
            android:paddingRight="@dimen/linear_layout_padding_offset"
            android:gravity="center"
            android:background="@color/colorBackground"
            android:onClick="hideKeyboard">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_constellation_logo_white"
                android:id="@+id/imageView"
                tools:ignore="VectorDrawableCompat"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:layout_marginTop="@dimen/first_text_view_top_margin"
                android:inputType="textPersonName"
                android:hint="@string/public_key_text_field"
                android:ems="10"
                android:id="@+id/publicKeyText"
                android:background="@color/colorWhite"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/object_top_offset"
                android:hint="@string/private_key_text_field"
                android:ems="10"
                android:id="@+id/privateKeyText"
                android:background="@color/colorWhite"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/object_top_offset"
                android:hint="@string/endpoint_url_text_field"
                android:ems="10"
                android:id="@+id/endpointText"
                android:background="@color/colorWhite"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_view_height"
                android:inputType="textPersonName"
                android:layout_marginTop="@dimen/object_top_offset"
                android:hint="@string/channel_id_text_field"
                android:ems="10"
                android:id="@+id/channelIdText"
                android:background="@color/colorWhite"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/object_top_offset">
            <Button
                    android:text="Send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:textSize="12sp"/>
            <Button
                    android:text="Send&#10;periodically"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/periodicButton"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>